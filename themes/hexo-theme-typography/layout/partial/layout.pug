doctype
html(lang="zh-CN")
    head
        include head

    body
        div#stage.container
            div.row
                include sidebar
                div#main-container.col-sm-9.col-xs-12.main-container.invisible

                    block content
                    div.visible-xs.site-bottom-footer
                        include footer


        script(src= url_for('//cdn.staticfile.org/jquery/3.6.3/jquery.min.js'))
        script(src= url_for('//cdn.staticfile.org/twitter-bootstrap/3.4.1/js/bootstrap.min.js'))
        script(src= url_for('//cdn.staticfile.org/jquery-migrate/3.4.0/jquery-migrate.min.js'))
        script(src= url_for('//cdn.staticfile.org/jquery-appear/0.1/jquery.appear.min.js'))
        //- script(src= url_for('js/google-analytics.js'))
        script(src= url_for('js/typography.js'))

        if theme.highlightjs 
            script(src= url_for('//cdn.staticfile.org/highlight.js/11.7.0/highlight.min.js'))
            script()
                | hljs.highlightAll()

        if(theme.hitokoto)
            script()
                |function hitokoto(){$("#hitokoto").html("");$.get("
                = theme.hitokoto.api
                |",{},function(response){$("#hitokoto").html(response.hitokoto)},"JSON");}hitokoto()
        if(theme.background.rotate)
            script()
                | if(Math.random() < 0.5) $('head').append('<style>body::before{transform: rotateY(180deg) !important}</style>')


